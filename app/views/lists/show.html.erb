<div class='container mt-2'>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://startuppakistan.com.pk/wp-content/uploads/2022/08/BB-1-scaled.jpg)">
    <%= @list.name %>
  </div>
  <div class='d-flex justify-content-between' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://startuppakistan.com.pk/wp-content/uploads/2022/08/BB-1-scaled.jpg)">
    <h3 class='text-white'><%= @list.name  %></h3>
    <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: 'btn btn-success text-white' %>
  </div>
  <div class="cards mt-2">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category bookmark-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
        <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this bookmark?' }, class: 'text-white' do %>
          <i class="fa-solid fa-xmark remove-bookmark-icon"></i>
        <% end %>
        <%= link_to bookmark.comment, bookmark_path(bookmark), class: 'text-decoration-none text-white' %>
      </div>
    <% end %>
  </div>
</div>
